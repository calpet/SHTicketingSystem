@model SelfHelpTicketingSystem.Models.CommentViewModel


<head>
    <link href="~/css/comment.css" rel="stylesheet" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>

<div class="row" id="full-create-comment">
    <div>
        <form asp-action="PostComment" class="align-content-center" id="comment-form">
            <input hidden asp-for="TicketId" value="@Model.TicketId" />
            <div class="form-group">
                <input hidden asp-for="Text" class="form-control" id="content" rows="12" />
                <div id="editor" name="editor">
                </div>
                <br />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" asp-action="PostComment" asp-controller="Comments" value="Create" class="btn btn-primary" id="submit" />
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <script src="~/js/comment.js"></script>