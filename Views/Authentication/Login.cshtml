@model UserViewModel

<form>
    <div class="form-group">
        <label>Email: </label>
        <input name="email" placeholder="email@example.com" asp-for="Email">
    </div>
    <div class="form-group">
        <label>Password: </label>
        <input type="password" name="password" asp-for="Password">
    </div>
    <div class="custom-checkbox">
        <label><input type="checkbox"/>Remember me</label>
    </div>
    <button type="submit" class="btn btn-default" asp-action="SignIn">Submit</button>
</form>
