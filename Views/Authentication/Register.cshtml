@using System.Web
@using Shts_Entities.Enums
@model UserViewModel

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/form.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="login-form">
        <form>
            <h2 class="text-center">Sign up</h2>
            @if (TempData["PasswordNotGood"] != null)
            {
                <p class="alert alert-danger">@TempData["PasswordNotGood"]</p>
            }
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <span>
                            </span>
                        </span>
                    </div>
                    <input type="text" class="form-control" placeholder="First name" asp-for="FirstName" />
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <span>
                            </span>
                        </span>
                    </div>
                    <input type="text" class="form-control" placeholder="Last name" asp-for="LastName" />
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <span>
                            </span>
                        </span>
                    </div>
                    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()">
                        <option selected="selected" value="">Please select a gender:</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <span>
                            </span>
                        </span>
                    </div>
                    <input type="text" class="form-control" placeholder="E-mail" asp-for="Email" />
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i></i>
                        </span>
                    </div>
                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i></i>
                        </span>
                    </div>
                    <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" />
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary login-btn btn-block" asp-action="CreateAccount">Sign up</button>
            </div>
        </form>
        <p class="text-center text-muted small">Already have an account? <a asp-action="Login">Sign in here!</a></p>
    </div>
</body>

