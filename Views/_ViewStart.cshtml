@using SelfHelpTicketingSystem.Classes
@using Shts_Entities.Enums

@{
    Layout = "_Layout";
}

@{
    if (!CookieManager.IsSignedIn)
    {
        Layout = "_Layout";
    }

    else if (CookieManager.IsSignedIn && CookieManager.GetRole() == UserRole.SupportUser)
    {
        Layout = "_UserLayout";
    }

    else if (CookieManager.IsSignedIn && CookieManager.GetRole() >= UserRole.Agent)
    {
        Layout = "_AgentLayout";
    }
}

